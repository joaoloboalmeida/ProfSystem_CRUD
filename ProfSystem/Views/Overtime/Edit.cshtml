@model ProfSystem.Models.Professional

@{
    ViewData["Title"] = "Edit";
}
 
<h1>Alterar</h1>

<h4>Horas extras</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="Phone" />
            <input type="hidden" asp-for="Rg" />
            <input type="hidden" asp-for="Address" />
            <input type="hidden" asp-for="Wage" />
            <input type="hidden" asp-for="WageWithOvertime" />
            <div class="form-group">
                <label asp-for="Hour" class="control-label"></label>
                <input asp-for="Hour" class="form-control" />
                <span asp-validation-for="Hour" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 3%;">
                <input type="submit" value="Calcular horas extras" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
