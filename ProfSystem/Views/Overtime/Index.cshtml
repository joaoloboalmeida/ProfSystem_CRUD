@model IEnumerable<ProfSystem.Models.Professional>

@{
    ViewData["Title"] = "Index";
}

<h1>Horas extras</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WageWithOvertime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WageWithOvertime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Alterar horas extras</a> 
            </td>
        </tr>
}
    </tbody>
</table>